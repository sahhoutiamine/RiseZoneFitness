<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RiseZoneFitness" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
    </style>
    <style name="TextStyle">
        <!-- Font family: Clean and elegant -->
        <item name="android:fontFamily">monospace</item>

        <!-- Font weight and style -->
        <item name="android:textStyle">bold</item>

        <!-- Size: Accessible and responsive -->
        <item name="android:textSize">16sp</item>

        <!-- Line spacing for better readability -->
        <item name="android:lineSpacingExtra">4dp</item>




        <item name="android:textColor">@color/white</item>





        <!-- Text alignment -->
        <item name="android:textAlignment">center</item> <!-- Align left-to-right based on locale -->

    </style>
    <style name="TitleTextStyle">
        <!-- Font family: Medium weight sans-serif for clean and modern look -->
        <item name="android:fontFamily">monospace</item>

        <!-- Text size: Large for clear emphasis -->
        <item name="android:textSize">22sp</item>



        <!-- Alignment: Left aligned for natural reading -->
        <item name="android:textAlignment">center</item>

        <!-- Extra spacing between lines -->
        <item name="android:lineSpacingExtra">2dp</item>

        <!-- Style: Bold for strong visual hierarchy -->
        <item name="android:textStyle">bold</item>


        <item name="android:textColor">@color/white</item>


    </style>
    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="buttonFilter" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">30dp</item>
    </style>
    <style name="iconColor">
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>



</resources>